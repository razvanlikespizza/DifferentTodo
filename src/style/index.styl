gunmetal = #2C2E3D
pink_raspbery = #92053F
vivid_crimson = #C80038
portland_orange = #FF5530
golden_yellow = #FFE200

@import "https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i"
@import "https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i"
@import "default/reset.styl"

::selection
  background: gunmetal
  color: white
  
html,
body
  font-family: Roboto, sans-serif
  height: 100%
  font-size: 10px

body
  background-color: gunmetal

.title
  padding: 1rem 0
  color: golden_yellow
  font-weight: bold
  font-size: 5rem
  text-align: center

.subtitle
  color: golden_yellow
  opacity 0.6
  font-size: 2rem
  text-align: center
  font-style: italic
// CREATE DIV

.container
  font-family: "Open Sans"
  margin: 0 auto
  max-width: 500px
  padding: 1rem

.createArea
  margin-top: 2rem
  width: 100%
  height 50px
  display: flex
  justify-content: center

#label_add
  width: 15%
  background: white
  color: gunmetal 
  font-size: 4rem
  display: flex
  justify-content: center
  align-items: center
  cursor: pointer

#input
  font-family: "Open Sans"
  font-size: 2rem
  width: 100%
  padding: 0.5rem
  outline: 0
  border: 0

//list DIV
.todo__li
  display: flex
  margin: 1rem 0
  &:hover .todo__content
    border-left: 0.8rem solid rgba(golden_yellow, 1)
    transition: all 0.1s ease

.todo__content
  overflow: hidden
  word-break: break-all
  width: 90%
  padding: 1.5rem 1rem
  font-size: 2rem
  letter-spacing: -0.05rem
  background: white
  transition: all 0.1s ease
  border-left: 0.6rem solid rgba(golden_yellow, 0.2)
  border-top-left-radius: 0.2rem
  border-bottom-left-radius: 0.2rem

.todo__delete
  font-size: 2.5rem
  width: 10%
  background: 0
  border: 0
  color: white
  cursor: pointer
  outline: 0
  background: portland_orange
  border-top-right-radius: 0.5rem
  border-bottom-right-radius: 0.5rem

@media only screen and (max-width: 800px)
  html,
  body
    font-size: 8px
  .container
    padding: 2rem
